<%- include('../comunes/cabecera') %>


<div class='container'>
    <h1>Lista</h1>
    <% const existeMensaje = typeof datos.mensaje !== "undefined"%>
    <% if (existeMensaje){%>
        <div class="alert alert-success" role="alert">
            <%= datos.mensaje %>
        </div>
    <%}%>
    <form action='/material/lista-material' method="get">
        <div class="mb-3">
            <label for="busqueda" class="form-label"> Búsqueda </label>
            <input placeholder="Ej: Cemento"
                   type="text"
                   name="busqueda"
                   class="form-control"
                   id="busqueda"
                   aria-describedby="ayudaBusqueda">
            <div id="ayudaBusqueda" class="form-text"> Puede buscar por nombre o marca de un material de construcción. </div>
        </div> <button type="submit" class="btn btn-primary w-25">Buscar</button>
    </form>
    <br>
    <br>
    <table class="table text-center">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Marca</th>
            <th scope="col">Precio ($)</th>
            <th scope="col">Tipo</th>
            <th scope="col">Stock</th>
            <th scope="col">Actualizar</th>
            <th scope="col">Eliminar</th>
        </tr>
        </thead>
        <tbody>
        <ul>
            <% datos.material.forEach( (objeto) => { %>
                <tr>
                    <th><%= objeto.id %></th>
                    <th><%= objeto.nombre %></th>
                    <th><%= objeto.marca %></th>
                    <th><%= objeto.precio %></th>
                    <th><%= objeto.tipo %></th>
                    <th><%= objeto.stock %></th>
                    <th>
                        <form action='/material/vista-editar/<%= objeto.id %>' method='post'>
                            <button class='btn btn-info'>Actualizar</button>
                        </form>
                    </th>
                    <th>
                        <form action='/material/eliminar-material/<%= objeto.id %>' method='post'>
                            <button class='btn btn-danger'>Eliminar</button>
                        </form>
                    </th>
                </tr>
            <% } ) %>
        </ul>
        </tbody>
    </table>
    <br>
    <div class="form-row text-center">
        <a href="/material/vista-crear">
            <div class="col-12">
                <button type="submit" class="btn btn-success">Crear Nuevo Material de Construcción</button>
            </div>
        </a>
    </div>
</div>
<br>

<%- include('../comunes/footer') %>